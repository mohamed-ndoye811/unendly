{
  "extends": "@vue/tsconfig/tsconfig.web.json",
  "include": ["env.d.ts", "src/**/*", "src/**/*.vue", "global.d.ts"],
  "exclude": ["src/**/__tests__/*"],
  "compilerOptions": {
    "composite": true,
    "baseUrl": ".",
    "paths": {
      "*": ["types/*.d.ts"],
      "@/*": ["./src/*"]
    },
    "lib": ["ES2022", "DOM"]
  }
}
